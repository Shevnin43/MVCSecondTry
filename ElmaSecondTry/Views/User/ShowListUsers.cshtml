@model IEnumerable<ElmaSecondTry.Models.UserModel.ShowUser>

<head>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#userstable").tablesorter({ cssAsc: "headerSortUp", cssDesc: "headerSortDown", cssHeader: "header" })
        }
        );
    </script>
</head>
<body>
    <div class="modal-body">
        <table class="table" id="userstable" style="text-align:center">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Login)</th>
                    <th>@Html.DisplayNameFor(model => model.Role)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.About)</th>
                    <th>@Html.DisplayNameFor(model => model.Phone)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.RegisterDate)</th>
                    <th> Действия </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(item.Login, "ShowUser", "User", new { login = item.Login }, null)</td>
                        <td>@Html.DisplayFor(modelItem => item.Role)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.About)</td>
                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.RegisterDate)</td>
                        <td>
                            <a href="@Url.Action("ShowUser", "User", new { login = item.Login})" style="margin-left:5px">
                                <img src="~/Images/black-strong/Details.png" width="20" title="Посмотреть пользователя @item.Login" />
                            </a>
                            <a href="@Url.Action("EditUser", "User", new { login = item.Login})" style="margin-left:5px">
                                <img src="~/Images/black-strong/Edit.png" width="20" title="Редактировать данные пользователя @item.Login" />
                            </a>
                            <a href='@Url.Action("DeleteUser", "User", new { login = item.Login})' onclick="return confirm('Вы уверены что желаете удалить пользователя (@item.Login) ?')">
                                <img src="~/Images/black-strong/Delete.png" width="20" title="Удалить пользователя @item.Login" />
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
</body>
